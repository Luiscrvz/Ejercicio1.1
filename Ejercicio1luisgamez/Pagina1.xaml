<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1.1.Pagina1">

    <StackLayout Padding="60">
        <Label Text="Digite el primer numero:"/>
        <Entry x:Name="PrimerNumero" Keyboard="Numeric"/>

        <Label Text="Digite el segundo numero:"/>
        <Entry x:Name="SegundoNumero" Keyboard="Numeric"/>

        <Button Text="Sumar" Clicked="BotonSumar"/>
        <Button Text="Restar" Clicked="BotonRestar"/>
        <Button Text="Multiplicar" Clicked="BotonMultiplicar"/>
        <Button Text="Dividir" Clicked="BotonDividir"/>
    </StackLayout>
</ContentPage>